{# security/login.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <title>{% block title %}Ingreso{% endblock %} - eolo.manager.v1</title>

    <link rel="icon" type="image/icon" href="">
    
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('manager/css/bootstrap-3.3.7/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('manager/css/font-awesome-4.7.0/css/font-awesome.min.css') }}">
        <!-- styles -->
        <link rel="stylesheet" href="{{ asset('manager/css/main.css') }}" />
        <link rel="stylesheet" href="{{ asset('manager/css/login.css') }}" />
    {% endblock %}
</head>
<body>
    <!-- header -->
    <header></header>
        
    <!-- wrapper -->
    <div id="wrapper">
        <div class="container">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-wrapper text-center">
                    <h1 class="h3">Bienvenido</h1>
                    <form method="post">
                        <div class="form-group">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Nombre de usuario" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="ContraseÃ±a" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Ingresar</button>
                    </form>
                    <div class="text-right">
                        <small>eolo.manager.v1</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- footer -->
    <footer></footer>
    
</body>
</html>